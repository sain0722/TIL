<!DOCTYPE html>

    <script language="javascript">
      function validate() {
         let item = document.getElementById("itemid").value;
         if (item == '') {
           alert("상품번호가 입력되지 않았습니다, 꼭 입력하세요");
           return false;
         }
         return true;
      }

    </script>

    <div class="container">  <!-- container class 가 페이지의 컨텐츠영역을 지정 -->
    <div class="jumbotron" style="width:800px; margin:auto">

    <div class="bm-login-form" style='width:700px; margin-left:auto; margin-right:auto; border:1px'>

      <div class="starter-template">
        <h4> 상품등록</h4> <hr>
      </div>
<% prodata.forEach(function (item, index) { %>
   <form name=join onsubmit="return validate()" method=post action="/adminprod/productlist">
        <div class="form-group">
         <label for="exampleFormControlSelect1">상품분류</label>
          <select class="form-control" id="exampleFormControlSelect1" name=category>
            <option>선풍기</option>
            <option>에어컨</option>
            <option>냉풍기</option>
            <option>미니선풍기</option>
            <option>냉장고</option>
            <option>얼풍기</option>
          </select>
       </div>
       <div class="form-group">
         <label for="exampleInputEmail1">상품번호</label>
         <input type="text" class="form-control" name="itemid" id="itemid" aria-describedby="emailHelp" placeholder="예) P0009" value="<%= item.itemid %>">
         필수항목, 최대6자리, 중복금지, 예) P0009
       </div>
    <div class="form-row">
      <div class="form-group col-md-6">
       <div class="form-group">
         <label for="exampleInputPassword1">상품명</label>
         <input type="text" class="form-control" name="pname" id="pname" placeholder="최대20자까지 입력" value="<%= item.pname %>">
       </div>
       <div class="form-group">
         <label for="exampleInputPassword2">모델명</label>
         <input type="text" class="form-control" name="modelnum" id="modelnum" placeholder="최대20자까지 입력" value="<%= item.modelnum %>">
       </div>
       <div class="form-group">
         <label for="exampleInputEmail1">판매형태</label>
         <input type="text" class="form-control" name="event" id="event" placeholder="일반세일, 이벤트세일, 특별세일" value="<%= item.event %>">
       </div>
       <div class="form-group">
         <label for="exampleInputEmail1">판매가격(원)</label>
         <input type="text" class="form-control" name="price" id="price" placeholder="가격을 입력하세요" value="<%= item.price %>">
       </div>
     </div>
     <div class="form-goup col-md-6">
       <div class="form-group">
         <label for="exampleInputEmail1">제조사</label>
         <input type="text" class="form-control" name="maker" id="maker" placeholder="제조회사를 입력하세요" value="<%= item.maker %>">
       </div>
       <div class="form-group">
         <label for="exampleInputEmail1">수량</label>
         <input type="text" class="form-control" name="amount" id="amount" placeholder="수량을 입력하세요" value="<%= item.amount %>">
       </div>
       <div class="form-group">
         <label for="exampleInputEmail1">할인율(%)</label>
         <input type="text" class="form-control" name="dcrate" id="dcrate" placeholder="예) 10%의 경우에는 10 으로 입력하세요" value="<%= item.dcrate %>">
       </div>


     </div>
   </div>

         <hr>
         <button type="submit" class="btn btn-primary">상품등록</button>
      </form>
      <% }); %>

     </div>
     </div>
    </div><!-- /.container -->

 <!-- Footer 영역 -->
